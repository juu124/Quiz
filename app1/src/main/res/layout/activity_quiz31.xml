<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz3_1Activity">

    <LinearLayout
        android:id="@+id/add_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:maxWidth="10dp"
            android:src="@drawable/add"
            android:tint="#09ff00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처에 추가"
            android:textColor="#09ff00"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="010-1234-1234"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_phone_num"
        tools:text="02-120" />

    <GridLayout
        android:id="@+id/layout_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_num">

        <TextView
            android:id="@+id/btn_num_1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="2"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="3"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="4"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="5"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="6"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="7"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="8"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="9"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_star"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="*"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="0"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_num_hash_tag"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="#"
            android:textSize="30dp"
            android:textStyle="bold" />

    </GridLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_num">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:src="@drawable/video" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:src="@drawable/call" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:src="@drawable/back" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>